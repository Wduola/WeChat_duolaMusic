/* 摇杆 */
.needle {
  position: relative;
  left: 60rpx;
  top: -40rpx;
  z-index: 99;
  width: 192rpx;
  height: 274rpx;

  /* 设置旋转的中心 */
  transform-origin: 40rpx 0;
  transform: rotate(-20deg);
  transition: transform 1s;
}

.needleRotate {
  transform: rotate(0deg);
}

.circle {
  position: relative;
  z-index: 100;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #fff;
  margin: 10rpx 0;
}

/* 磁盘 */
.discContainer {
  position: relative;
  top: -170rpx;
  width: 598rpx;
  height: 598rpx;
}
/* 磁盘旋转动画啊*/
.discAnimation {
  animation: disc 4s linear infinite;
  animation-delay: 1s;
}

/*
  动画：
    1. 前景： 由多帧组成的
    2. @keyframes；
      1) from to：动画帧只有两帧，多用于平滑过渡的简单动画
      2) 百分比: 0 - 100% ,适用于复杂的多帧动画

*/
@keyframes disc {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.discContainer .disc {
  width: 100%;
  height: 100%;
}

.discContainer .musicImg {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  width: 370rpx;
  height: 370rpx;
  border-radius: 50%;
}

/* musicControl */
.musicControl {
  position: absolute;
  bottom: 40rpx;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  border-top: 1rpx solid #fff;
}

.musicControl text {
  width: 20%;
  text-align: center;
  font-size: 50rpx;
  color: #fff;
  height: 120rpx;
  line-height: 120rpx;
}
.musicControl text.big {
  font-size: 80rpx;
}
/* 进度条控制区域 */
.audioControl {
  position: absolute;
  bottom: 200rpx;
  width: 640rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
}

/* 总的进度条 */
.barControl {
  position: relative;
  margin: auto;
  width: 450rpx;
  height: 4rpx;
  background: rgba(0, 0, 0, 0.4);
  border-radius: 2rpx;
}
/* 实时进度条 */
.audio-current-item {
  position: absolute;
  left: 0;
  top: 0;
  height: 4rpx;
  border-radius: 2rpx;
  /*width: 200rpx;*/
  background: red;
}

/* 小圆点 */
.audio-circle {
  position: absolute;
  right: -12rpx;
  top: -4rpx;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #fff;
}
