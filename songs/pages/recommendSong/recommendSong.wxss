.recommendSongContainer .header {
  position: relative;
  width: 100%;
  height: 300rpx;
}
.recommendSongContainer .header .haederImage {
  width: 100%;
  height: 300rpx;
}
.header .data {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  color: white;
}
.header .data .day {
  font-size: 40rpx;
}
.header .data .month {
  font-size: 26rpx;
}
/* 播放列表 */
.listContainer {
  height: 80px;
  padding: 0 20rpx;
}
.listHeader {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.listHeader text {
  font-size: 24rpx;
}
.listHeader .all {
  font-size: 30rpx;
}
/* 歌曲列表 */
.scrollMusic {
  height: calc(100vh - 420rpx);
}
.scrollItem {
  display: flex;
  height: 80rpx;
  margin-bottom: 20rpx;
}
.scrollItem image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 30rpx;
}

.musicContent {
  display: flex;
  flex-direction: column;
}
.musicContent text {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 26rpx;
  color: #333;
}
.scrollItem .iconfont {
  position: absolute;
  right: 0;
  width: 80rpx;
  height: 80rpx;
  text-align: right;
  line-height: 80rpx;
}
