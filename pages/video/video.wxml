<view class="videoContainer">
  <!-- 头部 --->
  <view class="videoHeader">
    <image class="videoImage" src="/static/images/video/video.jpg"></image>
    <input type="text" placeholder="搜索歌曲" placeholder-class="placeholder" />
    <image class="videoImage" src="/static/images/logo.png"></image>
  </view>

  <!-- 导航 --->
  <scroll-view class="scrollContainer" enable-flex scroll-x>
    <view class="scrollItem" wx:for="{{videoGroupList}}" wx:key="id">
      <view class="scrollNav {{navId===item.id?'active':''}}" id="{{item.id}}" bindtap="changeNavId">
        {{item.name}}
      </view>
    </view>
  </scroll-view>

  <!-- 视屏列表 --->
  <scroll-view class="videoList" scroll-y refresher-enabled bindrefresherrefresh="handleRefresher" bindscrolltolower="handleToLower" refresher-triggered="{{triggered}}">
    <view class="videoItem" wx:for="{{videoList}}" wx:key="index">
      <video 
      src="{{item.data.urlInfo.url}}" 
      bindplay="handlePlay"
      id="{{item.data.vid}}"
      poster="{{item.data.coverUrl}}"
      object-fit="fill"
      class="common"
      wx:if="{{videoId === item.data.vid}}"
      ></video>
    <image wx:else id="{{item.data.vid}}" bindtap="handlePlay" class="common" src="{{item.data.coverUrl}}"></image>

      <view class="content">{{item.data.title}}</view>
      <view class="footer">
        <image class="avatar" src="{{item.data.creator.avatarUrl}}"></image>
        <text class="nickName">{{item.data.creator.nickname}}</text>
        <view class="comments_praised">
          <text class="item">
            <text class="iconfont icon-buoumaotubiao15"></text>
            <text class="count">{{item.data.praisedCount}}</text>
          </text>
          <text class="item">
            <text class="iconfont icon-pinglun1"></text>
            <text class="count">{{item.data.commentCount}}</text>
          </text>
          <button open-type="share" class="item btn">
            <text class="iconfont icon-gengduo"></text>
          </button>
        </view>
      </view>
    </view>
  </scroll-view>
    
    
</view>
  